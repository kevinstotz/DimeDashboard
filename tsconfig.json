{
  "compilerOptions": {
    "baseUrl": "./node_modules/",
    "declaration": false,
    "outDir": "./dist/out-tsc",
    "rootDir": "",
    "paths": {
      "*": ["./*"]
    },
    "typeRoots": [
      "../node_modules/@types"
    ],
    "mapRoot": "./",
    "module": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es6", "dom" ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6"
  },

  "include": ["./node_modules/angular-bootstrap-md/**/*.ts",  "../src/**/*.ts"],
  "compileOnSave": true,
  "buildOnSave": true
}
